<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/sura_bg_image"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:src="@drawable/sura_bg" />
    <TextView
        android:id="@+id/sura_name_Tv"
        android:layout_width="70dp"
        android:paddingEnd="5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/sura_bg_image"
        app:layout_constraintEnd_toEndOf="@+id/sura_bg_image"
        app:layout_constraintStart_toStartOf="@+id/sura_bg_image"
        app:layout_constraintTop_toTopOf="@+id/sura_bg_image"
        tools:text ="الفاتحه"
        android:gravity="center"
        android:textSize="22sp"
        />
</android.support.constraint.ConstraintLayout>